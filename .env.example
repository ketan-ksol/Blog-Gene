# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration (recommended: gpt-4o)
# Options: gpt-4o, gpt-4-turbo, gpt-4, gpt-3.5-turbo
MODEL_NAME=gpt-4o
TEMPERATURE=0.7

# Tavily API for web search (optional, can use other search providers)
TAVILY_API_KEY=your_tavily_api_key_here

# SSL Configuration (set to false if behind corporate proxy with self-signed certificates)
SSL_VERIFY=true

# Output Configuration
OUTPUT_DIR=./output
SOURCES_DIR=./sources
